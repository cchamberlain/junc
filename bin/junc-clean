#!/bin/bash
#
# usage:
# ### Install and resource bashrc to get new functions
# npm install -g junc
# junc-install ["$BASHRC_PATH"]
# . "$BASHRC_PATH"
#
# ### Use similiar to pushd / popd to move to a temporary junctioned directory
# pushj [directory-path]
# popj

if [ -d /c/junc ]; then
  for path in /c/junc/*; do
    [ -d "$path" ] || continue
    pushd "$path"
    popj
  done
fi
