#!/bin/bash
#
# usage:
# npm install -g junc
#
# ### source functions and add to .bashrc
# junc-init
#
# ### Use similiar to pushd / popd to move to a temporary junctioned directory
# pushj
# popj

echo -e "\n. \"/$(npm config get prefix -p | tr -d ':' | sed 's/\\/\//g')/node_modules/junc/bin/junc-ref\"" >>"$HOME/.bashrc"

. "/$(npm config get prefix -p | tr -d ':' | sed 's/\\/\//g')/node_modules/junc/bin/junc-ref"
