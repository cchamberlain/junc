#!/bin/bash
#
# usage: cpj [target_directory-$PWD] destination_directory

NC='\033[0m'
RED='\033[0;31m'
GREEN='\033[0;32m'
CYAN='\033[0;36m'
BLUE='\033[0;34m'
PURPLE='\033[0;35m'
YELLOW='\033[1;33m'

COPY_FROM_ROOT=""
COPY_TO_ROOT=""

if [ $# -eq 2 ]; then
  COPY_FROM_ROOT="$1"
  COPY_TO_ROOT="$2"
else
  >&2 printf -- "%busage: cpj [target_directory-%s] destination_directory\n%b" "$RED" "$PWD" "$NC"
  exit 1
fi

pushj "$COPY_TO_ROOT"
  COPY_TO_JUNC="$PWD"
  pushj "$COPY_FROM_ROOT"
    COPY_FROM_JUNC="$PWD"
    for item_path in *; do
      COPY_TO_JUNC_PATH="$COPY_TO_JUNC/$item_path"
      if [ -d "$item_path" ]; then
        pushd "$item_path"
          cpj "$COPY_TO_JUNC_PATH"
        popd
      else
        cp "$item_path" "$COPY_TO_JUNC_PATH"
      fi
    done
  popj
popj