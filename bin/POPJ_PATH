#!/bin/bash
#
# usage:
# npm install -g junc
#
# ### source functions and add to .bashrc
# junc-init
#
# ### Use similiar to pushd / popd to move to a temporary junctioned directory
# pushj
# popj

JUNC_BIN="/$(npm config get prefix -p | tr -d ':' | sed 's/\\/\//g')/node_modules/junc/bin"
echo -en "$JUNC_BIN/pop-junc"