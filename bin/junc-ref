#!/bin/bash
#
# usage:
# npm install -g junc
#
# ### source functions and add to .bashrc
# junc-init
#
# ### Use similiar to pushd / popd to move to a temporary junctioned directory
# pushj
# popj

export pushj_path="$(PUSHJ_PATH)"
export popj_path="$(POPJ_PATH)"

pushj() { . "$pushj_path"; }
popj() { . "$popj_path"; }

export -f pushj
export -f popj