#!/bin/bash
#
# usage:
# npm install -g junc
#
# ### Add this to top of script or bashrc
# . "/$(npm config get prefix -p | tr -d ':' | sed 's/\\/\//g')/node_modules/junc/bin/junc-ref"
#
# ### Use similiar to pushd / popd to move to a temporary junctioned directory
# pushj
# popj

export pushj_path="$(PUSHJ_PATH)"
export popj_path="$(POPJ_PATH)"

pushj() { . "$pushj_path"; }
popj() { . "$popj_path"; }

export -f pushj
export -f popj